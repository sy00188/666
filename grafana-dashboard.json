{
  "dashboard": {
    "id": null,
    "title": "档案管理系统监控面板",
    "tags": ["archive", "management", "monitoring", "spring-boot"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "JVM内存使用情况",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "堆内存使用"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "堆内存最大值"
          },
          {
            "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
            "legendFormat": "非堆内存使用"
          }
        ],
        "yAxes": [
          {
            "label": "内存使用量 (bytes)",
            "min": 0
          }
        ],
        "xAxes": [
          {
            "label": "时间"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "thresholds": [
          {
            "value": 0.8,
            "color": "yellow"
          },
          {
            "value": 0.9,
            "color": "red"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP请求统计",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "legendFormat": "请求速率"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "95%响应时间"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "99%响应时间"
          }
        ],
        "yAxes": [
          {
            "label": "请求/秒",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "数据库连接池",
        "type": "graph",
        "targets": [
          {
            "expr": "hikaricp_connections_active",
            "legendFormat": "活跃连接数"
          },
          {
            "expr": "hikaricp_connections_idle",
            "legendFormat": "空闲连接数"
          },
          {
            "expr": "hikaricp_connections_pending",
            "legendFormat": "等待连接数"
          }
        ],
        "yAxes": [
          {
            "label": "连接数",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "业务指标",
        "type": "graph",
        "targets": [
          {
            "expr": "archive_created_total",
            "legendFormat": "档案创建总数"
          },
          {
            "expr": "user_login_total",
            "legendFormat": "用户登录总数"
          },
          {
            "expr": "document_downloaded_total",
            "legendFormat": "文档下载总数"
          }
        ],
        "yAxes": [
          {
            "label": "计数",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "JVM GC统计",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count[5m])",
            "legendFormat": "GC暂停次数"
          },
          {
            "expr": "rate(jvm_gc_pause_seconds_sum[5m])",
            "legendFormat": "GC暂停总时间"
          }
        ],
        "yAxes": [
          {
            "label": "GC次数/秒",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "系统资源使用",
        "type": "graph",
        "targets": [
          {
            "expr": "system_cpu_usage",
            "legendFormat": "CPU使用率"
          },
          {
            "expr": "process_cpu_usage",
            "legendFormat": "进程CPU使用率"
          }
        ],
        "yAxes": [
          {
            "label": "CPU使用率 (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "缓存命中率",
        "type": "graph",
        "targets": [
          {
            "expr": "cache_hits_total / (cache_hits_total + cache_misses_total) * 100",
            "legendFormat": "缓存命中率"
          }
        ],
        "yAxes": [
          {
            "label": "命中率 (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "错误率统计",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])",
            "legendFormat": "5xx错误率"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"4..\"}[5m])",
            "legendFormat": "4xx错误率"
          }
        ],
        "yAxes": [
          {
            "label": "错误率 (次/秒)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ]
  }
}